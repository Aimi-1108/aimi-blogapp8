<div class="container">

  <h1>New Board</h1>
  <%= form_with(model: @article, ulr: article_path(@article), method: 'put', local: true ) do |f|  %>
    <div>
      <%= f.label :title, 'Name' %>
    </div>
    <div>
      <%= f.text_field :title, class: 'text' %>
    </div>
    <div>
      <%= f.label :content, 'Description' %>
    </div>
    <div>
      <%= f.text_area :content %>
    </div>
    <div>
      <%= f.submit 'Submit', class: 'btn-primary' %>
    </div>
  <% end %>
</div>